        $("#_total_supply").html(contract.totalSupply().toString());
        $("#_starts").html(contract.startBlock().toString());
        $("#_ends").html(contract.endBlock().toString());
        $("#_price").html(contract.weiPerToken().toString());
        $("#_founder").html(contract.founder());
        $("#_regulator").html(contract.regulator());
        $("#val-table").show();
        $("#one_next").css("display", "inline");
            $("#pro-bar").hide();
        }, 1000)

    }

</script>

